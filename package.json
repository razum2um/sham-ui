{
  "name": "sham-ui",
  "version": "1.3.5",
  "description": "Components managment library",
  "main": "lib/shamUI.min.js",
  "browser": "lib/shamUI.min.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "dev": "WEBPACK_ENV=dev webpack --progress --colors",
    "build": "WEBPACK_ENV=build webpack",
    "prepublish": "npm run build",
    "doc": "esdoc"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "esdoc": "^0.5.2",
    "eslint": "^5.4.0",
    "eslint-plugin-jest": "^21.22.0",
    "webpack": "^2.2.1",
    "jest": "^23.4.1",
    "jest-runner-eslint": "^0.6.0"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties",
      "transform-es2015-modules-umd",
      "transform-object-rest-spread"
    ]
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sham-ui/sham-ui.git"
  },
  "author": "Eugene Burnashov <shamcode@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sham-ui/sham-ui/issues"
  },
  "homepage": "https://github.com/sham-ui/sham-ui#readme",
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "transform": {
          "^.+\\.js$": "babel-jest"
        },
        "collectCoverageFrom": [
          "src/**/*.js"
        ],
        "testPathIgnorePatterns": [
          "<rootDir>/node_modules/",
          "<rootDir>/__tests__/helpers.js"
        ],
        "testURL": "http://sham-ui.example.com"
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "<rootDir>/src/**/*.js",
          "<rootDir>/__tests__/**/*.js"
        ]
      }
    ]
  }
}
